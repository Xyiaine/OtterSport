{
  "name": "ottersport-desktop",
  "version": "1.0.0",
  "description": "OtterSport Fitness Card Game - Desktop Application",
  "main": "electron-main.js",
  "author": "OtterSport Team",
  "license": "MIT",
  "homepage": "https://github.com/ottersport/ottersport",
  "repository": {
    "type": "git",
    "url": "https://github.com/ottersport/ottersport.git"
  },
  "keywords": [
    "fitness",
    "workout",
    "card-game",
    "health",
    "exercise"
  ],
  "scripts": {
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run server\" \"wait-on http://localhost:5000 && electron .\"",
    "server": "cd .. && npm run dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.ottersport.app",
    "productName": "OtterSport",
    "directories": {
      "output": "dist"
    },
    "files": [
      "../client/dist/**/*",
      "../server/**/*",
      "../shared/**/*",
      "../game-assets/**/*",
      "electron-main.js",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../game-assets",
        "to": "game-assets"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "../game-assets/interface/logo.png",
      "publisherName": "OtterSport Team"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "OtterSport"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "../game-assets/interface/logo.png",
      "category": "public.app-category.healthcare-fitness"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "../game-assets/interface/logo.png",
      "category": "Game"
    }
  },
  "devDependencies": {
    "electron": "^37.2.4",
    "electron-builder": "^25.1.8",
    "concurrently": "^9.2.0",
    "wait-on": "^8.0.1"
  }
}